<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Scr3"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.lge.mid01.Main3Activity">

    <Button
        android:fontFamily="serif"
        android:id="@+id/button3"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.06"
        android:background="#f0f0f0"
        android:onClick="FinishScreen"
        android:text="Finish"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        android:layout_marginBottom="15dp" />

    <Button
        android:fontFamily="serif"
        android:id="@+id/button4"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:layout_weight="0.06"
        android:background="#f0f0f0"
        android:onClick="PreviousScreen"
        android:text="Previous"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:fontFamily="serif"
            android:paddingTop="30px"
            android:text="계란찜's Recipe"
            android:textAlignment="center"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="serif"
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:paddingTop="10px"
            android:text="1. 뚝배기에 달걀을 푼다."
            android:textSize="40px" />

        <TextView
            android:fontFamily="serif"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:paddingTop="10px"
            android:text="2. 달걀을 풀었으면 물을 넣어 섞어준다."
            android:textSize="40px" />

        <TextView
            android:fontFamily="serif"
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:paddingTop="10px"
            android:text="3. 새우젓으로 간을 한다."
            android:textSize="40px" />

        <TextView
            android:fontFamily="serif"
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:paddingTop="10px"
            android:text="4. 송송 썰은 대파와 깨를 올린다."
            android:textSize="40px" />

        <TextView
            android:fontFamily="serif"
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:paddingTop="10px"
            android:text="5. 뚜껑을 덮어 약불로 익힌다."
            android:textSize="40px" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
